pipeline{
    agent any
        stages{
            stage( 'build-system details'){
                steps{
            sh '''
                    echo '"ip adress"'
            hostname - i
               '''
                 }
             } 
            stage ('build-memory details'){
                steps{
            sh '''
                   echo "MEMORY DETAILS"
                    free
            '''                
                }
            }
            stage ('build-cpu details'){
                steps{
            sh '''
                    echo "cpu deatils"
                     lscpu
            '''                  
                }
            }
            stage ('build-disk details'){
                steps{
            sh '''
                    echo "today date"
                    date
            '''
                        
                }
            }
         stages('build-process command'){
                 steps{
                    sh '''
                    echo "process command"
                    ps -ef | head
                    '''
            
                }
            }     

         
        }  
}
